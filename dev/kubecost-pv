apiVersion: v1
kind: PersistentVolume
metadata:
  name: kubecost-pv
  namespace: kubecost
spec:
  capacity:
    storage: 60Gi
  volumeMode: Filesystem
  accessModes:
  - ReadWriteOnce
  persistentVolumeReclaimPolicy: Delete
  storageClassName: sc-kubecost
  local:
    path: /mnt/storage/kubecost
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - k8s-wn-01
          - k8s-wn-02
          - k8s-wn-03
          - k8s-wn-04
